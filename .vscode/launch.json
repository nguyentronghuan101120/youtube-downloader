    "version": "0.2.0",
    "configurations": [
        {
            "name": "youtube-downloader",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "youtube-downloader (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "youtube-downloader (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "Python: Execute Video Downloader",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/assets/main.py",
            "args": [
                "https://www.youtube.com/watch?v=ZQlU_OlgXO4",
                "--format=video",
                "--quality=1080p",
                // "--output-dir=DEFAULT_OUTPUT_DIR"
            ],
            "console": "integratedTerminal"
        },

        {
            "name": "Python: Get Playlist Info",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/assets/main.py",
            "args": [
                "https://www.youtube.com/playlist?list=UUq-Fj5jknLsUf-MWSy4_brA",
                "--format=info-only",
            ],
            "console": "integratedTerminal"
        },
    ]
}